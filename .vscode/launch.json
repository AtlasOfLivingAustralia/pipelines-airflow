{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            // for remote debugging of a DAG, please add the following code to the Task inside the DAG and put a breakpoint after the last line:
            //
            // from ala.ala_helper import enable_debugpy
            // enable_debugpy()
            "name": "Python Debugger: Remote Attach",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "airflow-worker",
                "port": 10001
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ]
        },
        {
            "name": "Python: Update Collection Alias",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/dags/update_collection_alias_cli.py",
            "console": "integratedTerminal",
            "args": [
                "--solr_base",
                "http://localhost:8983/solr",
                "--new_collection",
                "biocache",
                "--collection_to_keep",
                "biocache",
                "--solr_alias",
                "biocache",
                "--old_collection",
                "biocache",
                "--run_checks_only",
                "true",
                "auto_all"
            ]
        }
    ]
}